<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:descendantFocusability="blocksDescendants"
        android:padding="7dp">

        <TextView
            android:id="@+id/textview_db_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textview_petres_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:text="Yuvraj Baban Napte
Versus
The State of Maharashtra etc.1"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/textview_case_next_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textview_petres_name"
            android:layout_alignParentStart="true"
            android:layout_gravity="end"
            android:layout_marginTop="10dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:text="16th February"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textview_case_no"
            android:layout_width="154dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/textview_petres_name"
            android:layout_alignParentEnd="true"
            android:layout_gravity="end"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:marqueeRepeatLimit="marquee_forever"
            android:maxLines="1"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:text="sdfasdasdasd asd as asd asd asd asd  Cri.Appeal/2/2016"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/sharecase_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textview_petres_name"
            android:layout_centerInParent="true"
            android:background="@android:color/white"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:src="@drawable/ic_share_black_24dp" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>
